@using LinkedInAPI.Models;
@model GoogleDataModel;

@{
    <style>
        body {
            background-color: #080710;
        }
        h1{
        color: #ee3838;
        text-align: center;
        padding-bottom: 50px;
        }

        h2, p {
            text-align: center;
            color: #f3f1ff;
        }
        img {
            height: 185px;
            display: block;
            margin: auto;
            width: 300px;
        }

        .logout-wrapper {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }




        .button {
            float: right;
            padding: 18px;
            margin: 0;
            color: black;
            width: 45px;
            background-color: white;
            transition: width .35s;
            -webkit-transition: width .35s;
            overflow: hidden;
            border: none;
        }

            /* Reset button styles */
            .button button {
                all: unset;
                width: 100%;
                height: 100%;
                cursor: pointer;
                display: flex;
                align-items: center;
            }

            /* Hover effect */
            .button:hover {
                width: 100px;
            }

                .button:hover .logout {
                    
                }


    </style>
}
@if (User.Identity!.IsAuthenticated)
{
    <h1> Gmail Login Successfully</h1>
    <div class="logout-wrapper">
        <form action="/GoogleAccount/Logout" method="post" class="button">
            <button type="submit">
               
                <span class="logout">Logout</span>
            </button>
        </form>
    </div>
    <h2>Welcome, @Model.Name!</h2>

    <p>Email: <strong>@Model.Email</strong></p>
    if(!string.IsNullOrEmpty(Model.Profile))
    {
        <img src="@Model.Profile" alt="Profile Image"/>
    }
}
else
{
    ViewData["Message"] = "Please log in first.";
    Context.Response.Redirect("/");
}
